{
  "manifest_version": 3,
  "name": "X Blocker",
  "version": "1.0.0",
  "description": "Chrome extension that connects to local server and works on specific URLs",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
